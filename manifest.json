{
	"manifest_version": 3,
	"author": "エダマメストア",
	"homepage_url": "http://example.com",
	"name": "ShowAsin",
	"description": "Amazon商品のASINを表示",
	"version": "0.1",
	"icons": {
		"32": "icon_32.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
 	"content_scripts": [{
		// "matches": ["<all_urls>"],
    	// "matches": ["*://item.rakuten.co.jp/*","*://www.amazon.co.jp/*"],
    	"matches": ["*://www.amazon.co.jp/dp/*", "*://www.amazon.co.jp/gp/product/*", "*://www.amazon.co.jp/*/dp/*" ],
		"js": ["script.js","jquery.min.js","jsframe.min.js"],
		"run_at": "document_end",
		"all_frames": false
	}],
  	"background": {
		"scripts": ["background.js"],
	    "persistent": false
	},
	"browser_action": {
		"default_icon": "icon_32.png",
		"default_title": "グレースケールLOVE！"
	},
	"permissions": [
		"tabs",
		"background",
		"http://*/*",
		"https://*/*",
	    "activeTab",
	    "contextMenus"
  ]
}